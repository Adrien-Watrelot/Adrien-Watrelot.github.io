---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { t } from '@/i18n/utils';

const locale = 'fr';
---

<BaseLayout title={t(locale, 'nav.contact')} locale={locale}>
  <section class="py-16 md:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl space-y-12">
        <!-- Header -->
        <div class="text-center space-y-4 animate-fade-in-up">
          <h1 class="font-heading text-4xl font-bold tracking-tight sm:text-5xl">
            {t(locale, 'contact.title')}
          </h1>
          <p class="text-lg text-muted-foreground">
            {t(locale, 'contact.subtitle')}
          </p>
        </div>

        <!-- Contact Form -->
        <div class="card p-8 animate-fade-in-up" style="animation-delay: 0.1s;">
          <form
            id="contact-form"
            action="https://formspree.io/f/xaqnazgy"
            method="POST"
            class="space-y-6"
          >
            <div class="space-y-2">
              <label for="name" class="block text-sm font-medium">
                {t(locale, 'contact.name')}
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                minlength="2"
                maxlength="100"
                class="w-full rounded-md border border-input bg-background px-4 py-2 text-sm ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
              />
            </div>

            <div class="space-y-2">
              <label for="email" class="block text-sm font-medium">
                {t(locale, 'contact.email')}
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full rounded-md border border-input bg-background px-4 py-2 text-sm ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
              />
            </div>

            <div class="space-y-2">
              <label for="message" class="block text-sm font-medium">
                {t(locale, 'contact.message')}
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                minlength="10"
                maxlength="5000"
                class="w-full rounded-md border border-input bg-background px-4 py-2 text-sm ring-offset-background focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
              ></textarea>
            </div>

            <!-- Honeypot field - hidden from users, catches bots -->
            <input type="text" name="_gotcha" style="display:none" tabindex="-1" autocomplete="off" />

            <!-- reCAPTCHA token -->
            <input type="hidden" name="g-recaptcha-response" id="recaptcha-token-fr" />

            <div>
              <button type="submit" class="btn btn-primary w-full px-8 py-3">
                {t(locale, 'contact.send')}
              </button>
            </div>

            <div id="form-message" class="hidden text-center text-sm"></div>
          </form>
        </div>

        <!-- Contact Info -->
        <div class="text-center space-y-4 animate-fade-in-up" style="animation-delay: 0.2s;">
          <p class="text-sm text-muted-foreground">
            Vous pouvez également me contacter directement via :
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm">
            <a href="mailto:adrien.watrelot.pro@gmail.com" class="inline-flex items-center gap-2 text-primary hover:underline">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              adrien.watrelot.pro@gmail.com
            </a>
            <a href="https://www.linkedin.com/in/adrien-watrelot" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-primary hover:underline">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
            <a href="https://github.com/Adrien-Watrelot" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 text-primary hover:underline">
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Get reCAPTCHA site key from environment
  const RECAPTCHA_SITE_KEY = import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY;

  const form = document.getElementById('contact-form') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Show loading state
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton.textContent;
    submitButton.disabled = true;
    submitButton.textContent = 'Envoi en cours...';

    try {
      // Check if reCAPTCHA is loaded and configured
      if (typeof grecaptcha === 'undefined' || !RECAPTCHA_SITE_KEY) {
        throw new Error('reCAPTCHA not loaded');
      }

      // Get reCAPTCHA v3 token
      const token = await grecaptcha.execute(RECAPTCHA_SITE_KEY, { action: 'contact_form' });

      // Add token to hidden field
      const tokenInput = document.getElementById('recaptcha-token-fr') as HTMLInputElement;
      if (tokenInput) tokenInput.value = token;

      // Submit form data to Formspree
      const formData = new FormData(form);
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        // Show success message
        if (messageDiv) {
          messageDiv.textContent = 'Message envoyé avec succès !';
          messageDiv.classList.remove('hidden', 'text-red-500');
          messageDiv.classList.add('text-green-500');
        }
        // Reset form
        form.reset();
      } else {
        // Show error message
        const data = await response.json();
        if (messageDiv) {
          messageDiv.textContent = data.error || 'Une erreur est survenue. Veuillez réessayer.';
          messageDiv.classList.remove('hidden', 'text-green-500');
          messageDiv.classList.add('text-red-500');
        }
      }
    } catch (error) {
      console.error('Form submission error:', error);
      // Show error message
      if (messageDiv) {
        messageDiv.textContent = 'Une erreur est survenue. Veuillez réessayer.';
        messageDiv.classList.remove('hidden', 'text-green-500');
        messageDiv.classList.add('text-red-500');
      }
    } finally {
      // Reset button state
      submitButton.disabled = false;
      submitButton.textContent = originalText || 'Envoyer';
    }
  });
</script>
