---
interface Props {
  title?: string;
  code: string;
}

const { title = 'Code', code } = Astro.props;
---

<div class="code-terminal">
  <div class="code-terminal-header">
    <div class="code-terminal-dot bg-red-500"></div>
    <div class="code-terminal-dot bg-yellow-500"></div>
    <div class="code-terminal-dot bg-green-500"></div>
    <span class="code-terminal-title">{title}</span>
  </div>
  <div class="code-terminal-body">
    <div set:html={code} />
  </div>
</div>

<style>
  .code-terminal {
    background: var(--color-card);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    font-family: 'Courier New', Monaco, monospace;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
  }

  .code-terminal-header {
    background: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .code-terminal-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .code-terminal-title {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-left: 0.5rem;
  }

  .code-terminal-body {
    padding: 1.5rem;
    font-size: 0.875rem;
    line-height: 1.7;
    overflow-x: auto;
  }

  .code-terminal-body pre {
    margin: 0;
    padding: 0;
  }

  .code-terminal-body code {
    display: block;
    color: var(--color-text);
  }

  /* Syntax highlighting for code content */
  .code-terminal-body :global(.code-folder) {
    color: #94a3b8;
    font-weight: 500;
  }

  .code-terminal-body :global(.code-comment) {
    color: #64748b;
    font-style: italic;
  }

  .code-terminal-body :global(.code-tree) {
    color: #475569;
  }

  .code-terminal-body :global(.code-line) {
    display: flex;
    gap: 1rem;
  }

  /* Scrollbar styling */
  .code-terminal-body::-webkit-scrollbar {
    height: 8px;
  }

  .code-terminal-body::-webkit-scrollbar-track {
    background: transparent;
  }

  .code-terminal-body::-webkit-scrollbar-thumb {
    background: var(--color-muted);
    border-radius: 4px;
  }

  .code-terminal-body::-webkit-scrollbar-thumb:hover {
    background: var(--color-muted-foreground);
  }
</style>
