---
import { type Locale } from '@/i18n/utils';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
  locale: Locale;
  ogImage?: string;
}

const { title, description = '', locale, ogImage } = Astro.props;
const currentPath = Astro.url.pathname;

const fullTitle = title ? `${title} | Adrien Watrelot` : 'Adrien Watrelot - Full-Stack Developer';
const siteDescription = description || 'Portfolio of Adrien Watrelot, Full-Stack Developer specializing in Vue.js, React, Laravel, and ASP.NET. Modern and performant web applications.';

// Construct full URLs for canonical and OG
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultOgImage = new URL('/og-image.jpg', Astro.site);
const ogImageURL = ogImage ? new URL(ogImage, Astro.site) : defaultOgImage;

// Language alternates
const frPath = currentPath.replace(/^\/(en|fr)/, '/fr');
const enPath = currentPath.replace(/^\/(en|fr)/, '/en');
const frURL = new URL(frPath, Astro.site);
const enURL = new URL(enPath, Astro.site);

// Structured data for SEO
const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Adrien Watrelot",
  "jobTitle": "Full-Stack Developer",
  "url": Astro.site,
  "sameAs": [
    "https://github.com/Adrien-Watrelot",
    "https://www.linkedin.com/in/adrien-watrelot"
  ],
  "knowsAbout": ["Vue.js", "React", "Next.js", "Laravel", "ASP.NET", "TypeScript", "Docker"]
};
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={siteDescription} />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Adrien Watrelot" />
    <meta name="keywords" content="Full-Stack Developer, Vue.js, React, Laravel, ASP.NET, TypeScript, Web Development, Portfolio" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Language alternates -->
    <link rel="alternate" hreflang="fr" href={frURL} />
    <link rel="alternate" hreflang="en" href={enURL} />
    <link rel="alternate" hreflang="x-default" href={frURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={locale === 'fr' ? 'fr_FR' : 'en_US'} />
    <meta property="og:site_name" content="Adrien Watrelot Portfolio" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={siteDescription} />
    <meta name="twitter:image" content={ogImageURL} />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />

    <title>{fullTitle}</title>

    <!-- Inline script to prevent FOUC (Flash of Unstyled Content) -->
    <script is:inline>
      // Initialize theme before page renders
      (function() {
        const THEME_KEY = 'theme';

        function getTheme() {
          const stored = localStorage.getItem(THEME_KEY);
          if (stored === 'light' || stored === 'dark') {
            return stored;
          }
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        const theme = getTheme();
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      })();
    </script>
  </head>
  <body>
    <div class="flex min-h-screen flex-col">
      <Header locale={locale} currentPath={currentPath} />
      <main class="flex-1">
        <slot />
      </main>
      <Footer locale={locale} />
    </div>
  </body>
</html>
